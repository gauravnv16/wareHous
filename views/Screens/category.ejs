<div class="ui animated button" tabindex="0">
    <div class="visible content">back</div>
    <div class="hidden content">
    <a href="/"><i class="left arrow icon"></i></a>
    </div>
  </div>

<h1>Category</h1>

<form action="/category/search" method="post">
    <div class="ui action input">
        <input type="text" placeholder="Search..." name="cname" id="cname">
        <button class="ui icon button">
          <i class="search icon"></i>
        </button>
      </div>
</form>
<br>

<div class="ui animated fade button" tabindex="0">
    <div class="visible content"><i class="plus icon"></i> Add a Category</div>
    <div class="hidden content">
        <a href="/category/add">New Category</a>
    </div>
</div>

<% if (sear == 1 || sear == -1) { %>
    <button class="ui button">
        <a href="/category">clear search</a>
    </button>
<% } %>




<br><br>
<table class="ui sortable celled collapsing table">
    <thead>
        <tr>
            <th class="sorted descending">S.no</th>
            <th>Category Name</th>
            <th>IsActive</th>
            <% if (status.isadmin == true ||  status.ischecker == true) { %>
            <th>Operations</th>
            <% } %>
        </tr>
    </thead>
    <tbody>
        <% if(sear == -1) { %>
            <tr><td>item not found!!</td></tr>
        <% } %>
        <% for(var i = 0 ; i <category.length ; i++) {%>
            <tr>
                <td><%= i + 1%>.</td>
                <td><%=category[i].CAT_NAME%></td>
    
                <% if(category[i].ISACTIVE == 1){ %>
                <td>true</td>
                <% } else {%>
                <td>False</td>
                <% } %>
    
                <% if (status.isadmin == true ||  status.ischecker == true) { %>
                    <td>
                        <form action="/category/edit" method="post" style="display: inline">
                            <input type="text" name="cname" value=<%=category[i].CAT_NAME%> class="hidden1">
                            <input type="text" name="stat" id="stat" value="1" class="hidden1">
                            <button class="ui icon button">
                                <i class="edit icon"></i>
                            </button>
                        </form>
                        <form action="/category/delete" method="post" style="display: inline">
                            <input type="text" name="cname" value=<%=category[i].CAT_NAME%> class="hidden1">

                            <button class="ui icon button">
                                <i class="trash alternate outline icon"></i>
                            </button>
                        </form>
                    </td>
                <% } %>
            </tr>
        <% } %>
    </tbody>
</table>
